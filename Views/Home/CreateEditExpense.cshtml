@{
    ViewData["Title"] = "Create/Edit";
}

@model SpendSmart.Models.Expense

<div class="text-center">
    <h1 class="display-4">Create or Edit an expense</h1>
</div>

<form asp-action="CreateEditExpenseForm" asp-controller="Home">
    <input hidden class="form-control" typeof="number" placeholder="0" asp-for="Id" />
    <label class="mt-4">Value $</label>
    <input class="form-control" typeof="number" placeholder="0" asp-for="Value" step="0.01" />
    <label class="mt-4">Description</label>
    <input class="form-control" typeof="text" placeholder="Add a description" asp-for="Description" />

    <button class="btn btn-primary mt-4" type="submit">Ok</button>
</form>